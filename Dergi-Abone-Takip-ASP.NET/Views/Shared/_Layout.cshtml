                    <li>
                        <a href="/Dergi/Index" class="waves-effect"><i data-icon=")" class="linea-icon linea-basic fa-fw"></i> <span class="hide-menu">Dergiler</span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Dergi/Index">Listele</a></li>
                            <li><a href="/Dergi/Ekle">Ekle</a></li>
                            <li><a href="">Aboneler</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Uye/Index" class="waves-effect"><i data-icon=")" class="linea-icon linea-basic fa-fw"></i> <span class="hide-menu">Aboneler</span></a>
                        <ul class="nav nav-second-level">
                            <li><a href="/Uye/Index">Listele</a></li>
                            <li><a href="/Uye/Ekle">Ekle</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Kategori/Index" class="waves-effect"><i data-icon=")" class="linea-icon linea-basic fa-fw"></i> <span class="hide-menu">Kategoriler</span></a>
